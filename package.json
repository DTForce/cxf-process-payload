{
    "name": "cxf-payload-process",
    "displayName": "Process CXF Payload",
    "description": "Format CXF payloads",
    "version": "0.2.2",
    "publisher": "dtforce",
    "repository": "https://github.com/DTForce/cxf-process-payload",
    "engines": {
        "vscode": "^1.32.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:processCXF.processPayloadXML",
        "onLanguage:cxf",
        "onUri"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "processCXF.processPayloadXML",
                "title": "Process Payload (XML)"
            }
        ],
        "languages": [
            {
                "id": "cxf",
                "extensions": [
                    ".cxf",
                    ".req",
                    ".resp"
                ],
                "configuration": "./language-config.json"
            }
        ],
        "grammars": [
            {
                "language": "cxf",
                "scopeName": "source.cxf",
                "path": "./syntaxes/cxf.grammer.json",
                "embeddedLanguages": {
                    "text.xml": "xml",
                    "source.json": "json"
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "tslint ./src/*.ts",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "^6.0.40",
        "tslint": "^5.16.0",
        "typescript": "^3.5.1",
        "@types/vscode": "^1.32.0"
    },
    "dependencies": {
        "html-entities": "^2.1.0",
        "xml-formatter": "^2.4.0"
    }
}
